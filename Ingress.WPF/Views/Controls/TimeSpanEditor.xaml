<UserControl x:Class="Ingress.WPF.Views.Controls.TimeSpanEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" x:Name="ctrl"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <dxe:SpinEdit Margin="5,2" Grid.Column="0" Increment="1" EditValue="{Binding ElementName=ctrl, Path=Hours, UpdateSourceTrigger=PropertyChanged}" EditValueType="system:Int32" />
        <TextBlock Margin="5,2" Text="hrs" Grid.Column="1" />
        <dxe:SpinEdit Margin="5,2" Grid.Column="2" Increment="1" EditValue="{Binding ElementName=ctrl, Path=Minutes, UpdateSourceTrigger=PropertyChanged}" EditValueType="system:Int32" />
        <TextBlock Margin="5,2" Text="mins" Grid.Column="3" />

    </Grid>
</UserControl>
